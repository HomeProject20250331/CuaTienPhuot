# ============================================
# CuaTienPhuot Frontend Environment Variables
# ============================================

# API Configuration
# Base URL cho API backend
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Mock Data Configuration
# Bật/tắt mock data (true/false)
# Mặc định: true cho development
NEXT_PUBLIC_USE_MOCK_DATA=true

# API Timeout (milliseconds)
# Mặc định: 10000ms (10 giây)
NEXT_PUBLIC_API_TIMEOUT=10000

# Mock Data Delay (milliseconds)
# Thời gian delay để simulate network latency
# Mặc định: 500ms
NEXT_PUBLIC_MOCK_DELAY=500

# ============================================
# Authentication Configuration
# ============================================

# JWT Token Storage Key
# Key để lưu trữ JWT token trong localStorage
NEXT_PUBLIC_AUTH_TOKEN_KEY=auth_token

# Refresh Token Storage Key
# Key để lưu trữ refresh token trong localStorage
NEXT_PUBLIC_REFRESH_TOKEN_KEY=refresh_token

# Token Expiry Buffer (minutes)
# Thời gian buffer trước khi token hết hạn để refresh
NEXT_PUBLIC_TOKEN_EXPIRY_BUFFER=5

# ============================================
# Development Configuration
# ============================================

# Debug Mode
# Bật/tắt debug logging
NEXT_PUBLIC_DEBUG_MODE=true

# API Logging
# Bật/tắt logging cho API requests/responses
NEXT_PUBLIC_API_LOGGING=true

# Error Reporting
# Bật/tắt error reporting
NEXT_PUBLIC_ERROR_REPORTING=true

# ============================================
# Production Configuration
# ============================================

# Production API URL (uncomment for production)
# NEXT_PUBLIC_API_URL=https://api.cuatienphuot.com

# Production Mock Data (should be false in production)
# NEXT_PUBLIC_USE_MOCK_DATA=false

# Production Debug Mode (should be false in production)
# NEXT_PUBLIC_DEBUG_MODE=false

# ============================================
# Third-party Services
# ============================================

# Google Analytics (optional)
# NEXT_PUBLIC_GA_TRACKING_ID=GA_TRACKING_ID

# Sentry Error Tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=SENTRY_DSN

# ============================================
# File Upload Configuration
# ============================================

# Maximum file size for avatar upload (bytes)
# Mặc định: 5MB
NEXT_PUBLIC_MAX_AVATAR_SIZE=5242880

# Allowed avatar file types
NEXT_PUBLIC_ALLOWED_AVATAR_TYPES=image/jpeg,image/png,image/webp

# ============================================
# Notification Configuration
# ============================================

# Enable push notifications
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true

# Notification permission request delay (ms)
NEXT_PUBLIC_NOTIFICATION_DELAY=3000

# ============================================
# PWA Configuration
# ============================================

# PWA App Name
NEXT_PUBLIC_PWA_NAME=CuaTienPhuot

# PWA Short Name
NEXT_PUBLIC_PWA_SHORT_NAME=CuaTienPhuot

# PWA Description
NEXT_PUBLIC_PWA_DESCRIPTION=Ứng dụng quản lý chi tiêu nhóm

# PWA Theme Color
NEXT_PUBLIC_PWA_THEME_COLOR=#3b82f6

# PWA Background Color
NEXT_PUBLIC_PWA_BACKGROUND_COLOR=#ffffff

# ============================================
# Feature Flags
# ============================================

# Enable dark mode
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Enable offline mode
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# Enable biometric authentication
NEXT_PUBLIC_ENABLE_BIOMETRIC_AUTH=false

# Enable social login
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false

# ============================================
# Performance Configuration
# ============================================

# Enable service worker
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true

# Cache duration for API responses (minutes)
NEXT_PUBLIC_API_CACHE_DURATION=5

# Enable image optimization
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true

# ============================================
# Security Configuration
# ============================================

# Enable HTTPS only (production)
# NEXT_PUBLIC_FORCE_HTTPS=true

# Content Security Policy
# NEXT_PUBLIC_CSP_REPORT_URI=https://example.com/csp-report

# ============================================
# Analytics & Monitoring
# ============================================

# Enable performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Enable user analytics
NEXT_PUBLIC_ENABLE_USER_ANALYTICS=true

# Analytics sampling rate (0-1)
NEXT_PUBLIC_ANALYTICS_SAMPLING_RATE=0.1

# ============================================
# Localization
# ============================================

# Default language
NEXT_PUBLIC_DEFAULT_LANGUAGE=vi

# Supported languages
NEXT_PUBLIC_SUPPORTED_LANGUAGES=vi,en

# Enable RTL support
NEXT_PUBLIC_ENABLE_RTL=false

# ============================================
# Testing Configuration
# ============================================

# Test mode flag
NEXT_PUBLIC_TEST_MODE=false

# Mock API delay for testing (ms)
NEXT_PUBLIC_TEST_MOCK_DELAY=100

# Enable test data seeding
NEXT_PUBLIC_ENABLE_TEST_DATA=false

# ============================================
# Instructions
# ============================================

# 1. Copy this file to .env.local
# 2. Update the values according to your environment
# 3. Never commit .env.local to version control
# 4. Use .env.example as a template for team members

# Example usage in code:
# const apiUrl = process.env.NEXT_PUBLIC_API_URL;
# const useMockData = process.env.NEXT_PUBLIC_USE_MOCK_DATA === 'true';

# ============================================
# Environment-specific files
# ============================================

# .env.local - Local development (not committed)
# .env.development - Development environment
# .env.staging - Staging environment  
# .env.production - Production environment

# Priority order:
# 1. .env.local
# 2. .env.development/.env.staging/.env.production
# 3. .env

# ============================================
# Next.js Environment Variables
# ============================================

# Next.js automatically loads environment variables from:
# - .env.local (always loaded, not committed)
# - .env.development (loaded in development)
# - .env.production (loaded in production)
# - .env (always loaded)

# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# Variables without NEXT_PUBLIC_ are only available on the server

# ============================================
# API Service Configuration
# ============================================

# The API service layer will automatically use these environment variables:
# - API_CONFIG.BASE_URL = process.env.NEXT_PUBLIC_API_URL
# - API_CONFIG.USE_MOCK_DATA = process.env.NEXT_PUBLIC_USE_MOCK_DATA === 'true'
# - API_CONFIG.TIMEOUT = process.env.NEXT_PUBLIC_API_TIMEOUT
# - API_CONFIG.MOCK_DELAY = process.env.NEXT_PUBLIC_MOCK_DELAY

# ============================================
# End of Configuration
# ============================================
