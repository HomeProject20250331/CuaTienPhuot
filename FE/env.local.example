# Environment Configuration for Development
# Copy this file to .env.local and modify as needed

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Mock API Configuration
# Set to "true" to enable mock API in development
NEXT_PUBLIC_USE_MOCK_API=true

# Development Settings
NODE_ENV=development

# Optional: Mock API Settings
NEXT_PUBLIC_MOCK_DELAY_MIN=300
NEXT_PUBLIC_MOCK_DELAY_MAX=1500
NEXT_PUBLIC_MOCK_ERROR_RATE=0.05
